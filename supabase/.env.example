# SurrealDB connection for Supabase Edge Functions
# Copy this file to .env.local and update with your actual credentials

# Using host.docker.internal to access host machine from Docker container
SURREALDB_URL=http://host.docker.internal:8000
SURREALDB_USER=root
SURREALDB_PASSWORD=root
SURREALDB_NS=matchmaking
SURREALDB_DB=fruits

# OpenAI API key for LLM-generated match messages
# Get your key at https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here
